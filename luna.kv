                on_press:
                    root.manager.current = root.manager.last_screen
                    root.manager.last_screen = "ScreenAdd"
                icon: "arrow-left"


            MDIconButton:
                size_hint_x: 1
                text: "Continue"
                on_press:
                    root.Validate()
                    # self.Validate()
                icon: "checkbox-marked-circle"




