# The order below determines which screen is displayed after app loads


    ScreenWelcome:
        id: screen_welcome_id
        name: 'ScreenWelcome'

    ScreenAddDevice:
        id: screen_Add_id
        name: 'ScreenAdd'

    ScreenHome:
        id: screen_Home_id
        name: "ScreenHome"

    ScreenAboutMe:
        id: screen_AboutMe_id
        name: "ScreenAboutMe"

    ScreenIOTControl:
        id: screen_IOTControl_id
        name: "ScreenIOTControl"

    DeviceSettings:
        id: device_settings_id
        name: "DeviceSettings"
    ScreenCredits:
        id: screen_credits_id
        name: "ScreenCredits"

<TitleLabel>:
    size_hint: 1, 0.1
    orientation: "vertical"
    canvas:
        Color:
            # make it purple
            # use app theme
            rgba: app.theme_primary

        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        theme_text_color: "Custom"
        font_size: self.height * 0.5
        text: root.text
        # text_colour should be the inverted theme colour
        text_color: 1-app.theme_primary[0], 1-app.theme_primary[1], 1-app.theme_primary[2], 1
        font_size: self.height * 0.5
        halign: "center"
        valign: "middle"
        size_hint_y: 0.1
        size_hint_x: 1



<SavedTheme@Popup>:
    title: "Saved Theme"
    size_hint: 0.5, 0.5
    auto_dismiss: True
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            font_size: self.height * 0.5
            text: "Theme Saved!\n Restart the app to load changes"
            halign: "center"
        MDRaisedButton:
            text: "OK"
            on_release: root.dismiss()

<DeviceDataPage>:
    BoxLayout:
        MDTextField:
            hint_text: "Name"
            helper_text: "Enter a name for the device"
            helper_text_mode: "on_focus"
            multiline: False
            id: dev_name
            font_size: self.height * 0.5

        MDTextField:
            hint_text: "Description"
            helper_text: "Enter a description for the device"
            helper_text_mode: "on_focus"
            multiline: False
            id: description
            font_size: self.height * 0.5
        MDTextField:
            hint_text: "IP Address"
            helper_text: "Enter a valid IP address in the format x.x.x.x"
            helper_text_mode: "on_focus"
            id: ip_id
            multiline: False
            font_size: self.height * 0.5


<Toolbar>:
    # make back canvas
    canvas:
        Color:
            # make it purple
            # use app theme
            rgba: app.theme_primary

        Rectangle:
            pos: self.pos
            size: self.size
    AddButton:
        size_hint_x: 1
    HomeButton:
        size_hint_x: 1
    MeButton:
        size_hint_x: 1


<ScreenWelcome>:
    BoxLayout:
        orientation: 'vertical'


        MDTextButton:
            size_hint_y: None
            text_size: self.parent.width, None
            height: self.texture_size[1]*4
            text: 'Welcome to the\n Star Tracker IOT APP'

            halign:"center"
            # resize text to fit button
            on_release:
                root.manager.current = root.manager.splash_next
                root.manager.last_screen = 'ScreenWelcome'
        AsyncImage:
            # source is Princess_Luna_Remul-Lemlem_personaluse_fairuse.png
            source: "Princess_Luna_Remul-Lemlem_personaluse_fairuse.png"
        MDRaisedButton:
            halign: 'center'
            size_hint_y: 0.1
            text: "Continue!"
            size_hint_x: 1
            md_bg_color: app.theme_primary

            # set color to app theme


            on_press:

                root.manager.current = root.manager.splash_next
                root.manager.last_screen = 'ScreenWelcome'

            pos_hint: {"center_x": .5, "center_y": .5}



<ScreenAddDevice>:

    id: devices
    BoxLayout:

        orientation: 'vertical'
        TitleLabel:
            text: "Star Tracker Add Device"
        StackLayout:
            id: addDevice_grid
            padding: dp(20)
            spacing: dp(20)
            MDTextField:
                hint_text: "Name"
                helper_text: "Enter a name for the device"
                helper_text_mode: "on_focus"
                multiline: False
                id: dev_name
                font_size: self.height * 0.5

            MDTextField:
                hint_text: "Description"
                helper_text: "Enter a description for the device"
                helper_text_mode: "on_focus"
                multiline: False
                id: description
                font_size: self.height * 0.5
            MDTextField:
                hint_text: "IP Address"
                helper_text: "Enter a valid IP address in the format x.x.x.x"
                helper_text_mode: "on_focus"
                id: ip_id
                multiline: False
                font_size: self.height * 0.5
            MDRectangleFlatButton:
                text: "Device Types"
                id: dropdown_opener
                size_hint_x: 1
                size_hint_y: 0.2


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            canvas:
                Color:
                    # make it purple
                    # use app theme
                    rgba: app.theme_primary

