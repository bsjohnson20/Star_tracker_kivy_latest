<Manager>:
    id: fuckeroni
    screenwelcome: screen_welcome_id
    screenadddevice: screen_Add_id
    screenhome: screen_Home_id
    screenaboutme: screen_AboutMe_id
    screeniotcontrol: screen_IOTControl_id
    screencredits: screen_credits_id


# The order below determines which screen is displayed after app loads


    ScreenWelcome:
        id: screen_welcome_id
        name: 'ScreenWelcome'

    ScreenAddDevice:
        id: screen_Add_id
        name: 'ScreenAdd'

    ScreenHome:
        id: screen_Home_id
        name: "ScreenHome"

    ScreenAboutMe:
        id: screen_AboutMe_id
        name: "ScreenAboutMe"

    ScreenIOTControl:
        id: screen_IOTControl_id
        name: "ScreenIOTControl"

    DeviceSettings:
        id: device_settings_id
        name: "DeviceSettings"
    ScreenCredits:
        id: screen_credits_id
        name: "ScreenCredits"




<ScreenWelcome>:
    BoxLayout:
        orientation: 'vertical'

        MDTextButton:
            text: 'Welcome to the\n Star Tracker IOT APP'
            size_hint_y: 0.9
            size_hint_x: 1
            halign:"center"
            on_release:
                root.manager.current = root.manager.splash_next
                root.manager.last_screen = 'ScreenWelcome'
        MDRaisedButton:
            halign: 'center'
            size_hint_y: 0.1
            text: "Continue!"
            size_hint_x: 1
            on_press:

                root.manager.current = root.manager.splash_next
                root.manager.last_screen = 'ScreenWelcome'

            pos_hint: {"center_x": .5, "center_y": .5}



<ScreenAddDevice>:

    id: devices
    BoxLayout:

        orientation: 'vertical'
        MDLabel:
            text: "Star Tracker Add Device"
            size_hint_y: 0.1
            halign:"center"
            # center
            pos_hint: {"center_x": .5, "center_y": .5}
        GridLayout:
            id: addDevice_grid
            padding: 20
            spacing: 20

            cols: 2
            MDLabel:
                text: "Name"
            TextInput:
                multiline: False
                id: name
                font_size: self.height * 0.5
            MDLabel:
                text: "Desc"
            TextInput:
                multiline: False
                id: desc
                font_size: self.height * 0.5
            MDLabel:
                text: "IP"
            TextInput:
                id: ip_id
                multiline: False
                font_size: self.height * 0.5
            MDLabel:
                text: "Device"
            MDRectangleFlatButton:
                text: "Device Types"
                id: dropdown_opener
                size_hint_x: 1
                size_hint_y: 0.8


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            canvas:
                Color:
                    # make it purple
                    rgba: 0.75, 0, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDIconButton:
                size_hint_x: 1
                text: "Back"
                on_press:
                    root.manager.current = root.manager.last_screen
                    root.manager.last_screen = "ScreenAdd"
                icon: "arrow-left"


            MDIconButton:
                size_hint_x: 1
                text: "Continue"
                on_press:
                    root.Validate()
                    # self.Validate()
                icon: "checkbox-marked-circle"




<ScreenHome>:
    BoxLayout:
        size_hint_x: 1
        id: screenhome_box
        orientation: "vertical"
        BoxLayout:

            id: homeScreen_HomeHome
            size_hint_y:0.9
            orientation: 'vertical'
            MDLabel:
                text: "Star Tracker Home"
                size_hint_y: 0.1
                size_hint_x: 1
                halign:"center"
            # Cards go here - build a generator for them...
            ScrollView:
                scroll_distance: 100
                size_hint_x: 1

                MDList:
                    size_hint_y:None
                    height: self.minimum_height
                    spacing: 10
                    id: add_here
            ToolBar:
                size_hint_y: 0.1

# template for the cards :D - on the way to launch!
<DeviceCard>:
    size_hint_x: 1
    MDCardSwipeLayerBox:
        # delete me
        Deletethis:
            on_release:
                self.removeFromDatabase(root.name)
                root.parent.remove_widget(root)
                # update the database

    MDCardSwipeFrontBox:
        size_hint_y: 1
        # on release
        # show the name of the card
        on_release:
            root.open()

        OneLineListItem:
            size_hint_y: 1
            id: card_name
            on_release:
                print("card name pressed")
                root.open()
        # show name of root.name
            BoxLayout:
                orientation: "horizontal"
                # center

                MDLabel:
                    text: root.name+"\n"+root.desc+"\n"+root.ip
                    halign: "center"
                    size_hint_x: 0.9
                    size_hint_y: 1
                MDIcon:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon: "lightbulb-on"
                    halign: "center"
                    size_hint_x: 0.1
                    # set size to change with the screen
                    size: self.texture_size
                    # set the size of the icon to be the same as the text
                    font_size: self.height * 1




<ScreenIOTControl>:
    BoxLayout:
        # min size of the box
        # centre the box
        pos_hint: {"center_x": .5, "center_y": .5}

        orientation: 'vertical'
        MDLabel:
            text: "Star Tracker IOT Control"
            size_hint_y: 0.1
            halign:"center"
        BoxLayout:
            id: iotcontrol_box
            orientation: 'vertical'
            size_hint_y: 0.9
            # pos hint is relative to the parent widget
            pos_hint: {"center_x": .5, "center_y": .5}

        BoxLayout:
            size_hint_y: 0.1
            size_hint_x: 1
            id: toolbar_box
            canvas:
                Color:
                    # make it purple
                    rgba: 0.75, 0, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            # scale toolbar to 10% of screen height
            IOT_toolbar:
                # set name, desc and ip
                name: root.name
                desc: root.desc
                ip: root.ip




            # scale x to 100% of screen width
<ScreenCredits>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            MDLabel:
                text: "Star Tracker Credits"
                size_hint_y: 0.1
                halign:"center"
        MDLabel:
            size_hint_y: 0.1
            halign:"center"
            text: "This is an app created for my coursework, and I have enjoyed it's development watching my skills improve.\n The below image is by Remul-Lemlem on devianArt I do not claim ownership of it."
        AsyncImage:
            # load image from website
            source: "Princess_Luna_Remul-Lemlem_personaluse_fairuse.png"
            size_hint_y: 0.9
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            MDIconButton:
                size_hint_x: 1
                text: "Back"
                on_release:
                    root.manager.current = root.manager.last_screen
                    root.manager.last_screen = "ScreenHome"
                icon: "arrow-left"



<DeviceSettings>:
    on_enter:
        print(root.manager.name)
        self.name = root.manager.name
        self.desc = root.manager.desc
        self.ip = root.manager.ip

        # update the text inputs
        self.ids.nameInput.text = root.manager.name
        self.ids.descInput.text = root.manager.desc
        self.ids.ipInput.text = root.manager.ip

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:

            size_hint_y: 0.1
            orientation: 'horizontal'
            MDLabel:
                text: "Star Tracker Device Settings"
                size_hint_y: 0.1
                halign:"center"
        BoxLayout:
            id: labels_box
            orientation: 'vertical'
            size_hint_y: 0.9
            # name, desc and IP labels
            GridLayout:
                id: deviceSettings_grid
                padding: 20
                spacing: 20
                cols: 2
                MDLabel:
                    text: "Name"
                TextInput:
                    id: nameInput
                    text: root.name
                MDLabel:
                    text: "Desc"
                TextInput:
                    id: descInput
                    text: root.desc
                MDLabel:
                    text: "IP"
                TextInput:
                    id: ipInput
                    text: root.ip



        BoxLayout: # toolbar
            orientation: 'horizontal'
            size_hint_y: 0.1
            MDIconButton:
                size_hint_x: 1
                text: "Back"
                on_release:

                    root.manager.current = "ScreenIOTControl"
                    root.manager.last_screen = "DeviceSettings"
                icon: "arrow-left"
            # Save button
            MDIconButton:
                size_hint_x: 1
                text: "Save"
                icon: "content-save"
                on_release:
                    # fetch ids for text inputs
                    root.save(name=self.parent.parent.parent.ids.nameInput.text, desc=self.parent.parent.parent.ids.descInput.text, ip=self.parent.parent.parent.ids.ipInput.text)


<ScreenAboutMe>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            MDLabel:
                text: "Star Tracker Settings"
                size_hint_y: 0.1
                halign:"center"
            MDIconButton:
                # Credits
                size_hint_x: 0.1
                size_hint_y: 1
                icon: "information"
                on_release:
                    root.manager.current = "ScreenCredits"
                    root.manager.last_screen = "ScreenAboutMe"
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            # Theme settings
            MDLabel:
                text: "Theme"
                size_hint_y: 0.1
                halign:"center"
            # set app theme
            MDRectangleFlatButton:
                text: "Light"
                id: dropdown_opener
                size_hint_x: 1
                size_hint_y: 0.8
                # set theme on release
                on_release:
                    # call LightMode
                    app.get_running_app().LightMode()
            MDRectangleFlatButton:
                text: "Dark"
                id: dropdown_opener
                size_hint_x: 1
                size_hint_y: 0.8
                # set theme on release
                on_release:
                    # call DarkMode
                    app.get_running_app().DarkMode()




        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            canvas:
                Color:
                    # make it purple
                    rgba: 0.75, 0, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDIconButton:
                size_hint_x: 1
                text: "Back"
                on_press:
                    root.manager.current = root.manager.last_screen
                    root.manager.last_screen = "ScreenAboutMe"
                icon: "arrow-left"

            MDIconButton:
                size_hint_x: 1
                text: "Save"
                on_press:
                    root.manager.current = root.manager.last_screen
                    root.manager.last_screen = "ScreenAboutMe"
                icon: "content-save"



